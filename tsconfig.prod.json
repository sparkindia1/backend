{
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["./@types"],
    "outDir": "./build",
    "sourceMap": false
  },
  "exclude": ["node_modules", "build", "dist", "coverage", "src/**/*.test.ts"]
}
